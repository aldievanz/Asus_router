<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp"
    android:background="#FFFFFF"
    tools:context=".ui.notifications.FragmentGuest">

    <!-- Icon Guest -->
    <ImageView
        android:id="@+id/imgGuestIcon"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@android:drawable/ic_menu_help"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Text Welcome Guest -->
    <TextView
        android:id="@+id/tvWelcomeGuest"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Selamat Datang, Tamu!"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#333333"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/imgGuestIcon"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp"/>

    <!-- Deskripsi -->
    <TextView
        android:id="@+id/tvGuestDesc"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Login untuk akses fitur lengkap, atau lanjutkan sebagai tamu untuk melihat produk."
        android:textSize="16sp"
        android:textColor="#666666"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/tvWelcomeGuest"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"
        android:lineSpacingExtra="4dp"/>

    <!-- Tombol Login -->
    <Button
        android:id="@+id/btnLoginGuest"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Login Sekarang"
        android:backgroundTint="@color/blue_primary"
        android:textColor="#FFFFFF"
        android:textAllCaps="false"
        android:padding="12dp"
        app:layout_constraintTop_toBottomOf="@id/tvGuestDesc"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="32dp"/>

    <!-- Tombol Lanjutkan sebagai Tamu -->

</androidx.constraintlayout.widget.ConstraintLayout>
