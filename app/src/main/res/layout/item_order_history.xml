<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="12dp"
    android:layout_marginBottom="16dp"
    card_view:cardCornerRadius="16dp"
    card_view:cardElevation="8dp"
    android:backgroundTint="@android:color/white">

    <LinearLayout
        android:id="@+id/item_order"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp"
        android:background="@android:color/white">

        <TextView
            android:id="@+id/tvNamaMobil"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nama Mobil"
            android:textStyle="bold"
            android:textSize="22sp"
            android:textColor="#009688"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/tvAlamat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Alamat Kirim (Kota, Provinsi)"
            android:textSize="16sp"
            android:textColor="#555"
            android:layout_marginBottom="4dp" />

        <TextView
            android:id="@+id/tvEstimasi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Estimasi Sampai: 5-7 Hari"
            android:textSize="16sp"
            android:textColor="#555"
            android:layout_marginBottom="4dp" />

        <TextView
            android:id="@+id/tvTanggalOrder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tanggal Order: 2025-06-19"
            android:textSize="16sp"
            android:textColor="#555"
            android:layout_marginBottom="8dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#DDD"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/tvSubtotal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Subtotal: Rp 123.000.000"
            android:textSize="16sp"
            android:textColor="#333"
            android:layout_marginBottom="4dp" />

        <TextView
            android:id="@+id/tvOngkir"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ongkir: Rp 20.000"
            android:textSize="16sp"
            android:textColor="#333"
            android:layout_marginBottom="4dp" />

        <TextView
            android:id="@+id/tvTotalBayar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Total Bayar: Rp 123.020.000"
            android:textSize="18sp"
            android:textColor="#000"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/tvStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Status: Menunggu"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="#009688"
            android:layout_marginBottom="12dp" />

        <!-- Metode Pembayaran -->
        <TextView
            android:id="@+id/tvMetodePembayaran"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Metode Pembayaran"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="#000"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/tvMetodeBayar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="COD"
            android:textSize="16sp"
            android:textColor="#333"
            android:layout_marginBottom="12dp" />

        <!-- Upload Bukti Bayar jika kosong -->
        <LinearLayout
            android:id="@+id/layoutUpload"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="end"
            android:visibility="visible">

            <Button
                android:id="@+id/btnPilihGambar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pilih Gambar"
                android:backgroundTint="@color/teal_700"
                android:textColor="@android:color/white"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:layout_marginBottom="12dp"
                android:layout_gravity="end" />
        </LinearLayout>

        <ImageView
            android:id="@+id/imgBuktiBayar"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            android:layout_marginTop="8dp"
            android:visibility="gone"
            android:background="#EEE"
            android:layout_marginBottom="12dp" />

    </LinearLayout>
</androidx.cardview.widget.CardView>
