<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Upload Bukti Pembayaran"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginBottom="24dp"
        android:gravity="center"/>

    <!-- Add these new TextViews for transaction info -->
    <TextView
        android:id="@+id/tvTransId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nomor Transaksi: "
        android:textStyle="bold"
        android:layout_marginBottom="8dp"/>

    <TextView
        android:id="@+id/tvTotalBayar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Total Bayar: "
        android:textStyle="bold"
        android:layout_marginBottom="16dp"/>

    <ImageView
        android:id="@+id/imgBuktiBayar"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:scaleType="centerCrop"
        android:background="#f0f0f0"
        android:layout_marginBottom="16dp"/>

    <Button
        android:id="@+id/btnPilihGambar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Pilih Gambar"
        android:layout_marginBottom="16dp"/>

    <Button
        android:id="@+id/btnUpload"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Upload Bukti Bayar"
        android:backgroundTint="#2ecc71"
        android:textColor="#ffffff"/>
</LinearLayout>