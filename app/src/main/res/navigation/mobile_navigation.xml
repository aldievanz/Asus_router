<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@id/text_home">

    <fragment
        android:id="@+id/navigation_product"
        android:name="com.example.product_bottomnav.ui.product.ProductFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_product" />

    <fragment
        android:id="@+id/navigation_dashboard"
        android:name="com.example.product_bottomnav.ui.dashboard.OrderFragment"
        android:label="@string/title_dashboard"
        tools:layout="@layout/fragment_order" />

    <fragment
        android:id="@+id/navigation_notifications"
        android:name="com.example.product_bottomnav.ui.product.Profil"
        android:label="Profil"
        tools:layout="@layout/fragment_notifications" />

    <fragment
        android:id="@+id/text_home"
        android:name="com.example.product_bottomnav.ui.home.HomeFragment"
        android:label="Home"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/navigation_guest"
        android:name="com.example.product_bottomnav.ui.notifications.FragmentGuest"
        android:label="PROFILE"
        tools:layout="@layout/fragment_guest" />

    <!-- Menambahkan OrderHistoryFragment -->
    <fragment
        android:id="@+id/orderHistoryFragment"
        android:name="com.example.product_bottomnav.ui.notifications.OrderHistoryFragment"
        android:label="Order History"
        tools:layout="@layout/fragment_order_history" />

</navigation>
